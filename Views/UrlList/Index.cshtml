@model IEnumerable<ShortUrl.Models.Url>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UrlCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UrlCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UrlId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UrlId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UrlId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
