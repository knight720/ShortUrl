@{
    Layout = "_LayoutShortUrl";
    ViewData["Title"] = "ShortUrl";
}

Url
<input type="text" id="inputUrl" value="http://www.google.com" placeholder="Input Url">
<input type="button" id="btnSubmit" onclick="generateCode()"  value="Submit">
<p />
<div id="outputUrl">@Model</div>

@section Scripts {
    <script>
        //var XMLHttpRequest = require("xmlhttprequest").XMLHttpRequest;
        var url = '../api/url';

        function generateCode() {
            var request = new XMLHttpRequest();
            request.open('POST', url, true);
            request.setRequestHeader('Content-type', 'application/json');
            request.onload = function () {
                console.log(this.status);
                if (request.status >= 200 && request.status < 400) {
                    console.log(this.responseText);
                    showResult(this.responseText);
                } else {
                    console.log('error');
                }
            };

            let params = document.getElementById('inputUrl').value;
            request.send(JSON.stringify({ Url: params }));
        }

        function showResult(result) {
            let dom = document.getElementById('outputUrl');
            let message = '<a href="../' + result + '">' + result + '</a>';
            dom.innerHTML = message;
        }
    </script>
}